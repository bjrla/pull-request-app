@media (max-width: 768px) {
  .app-container {
    .app-header {
      .header-content {
        flex-direction: column;
        gap: 1.5rem;
        padding: 1.5rem;
      }

      .header-left {
        gap: 0.75rem;
      }

      .logo {
        width: 40px;
        height: 40px;

        .logo-icon {
          width: 20px;
          height: 20px;
        }
      }

      .app-title {
        font-size: 1.75rem;
      }

      .app-subtitle {
        font-size: 0.75rem;
      }

      .nav-buttons {
        width: 100%;
        justify-content: center;

        .nav-button {
          padding: 10px 16px;
          font-size: 0.85rem;

          .nav-icon {
            width: 14px;
            height: 14px;
          }
        }
      }
    }

    .app-content {
      padding: 1.5rem;
    }
  }
}
